local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- Funkce pro odeslání zprávy do chatu
local function sendMessage()
    local message = "blackdots.xyz best executor!"
    ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
end

-- Funkce pro sledování, zda hráč někoho zabil
local function onPlayerKill()
    -- Počkej chvíli a pošle zprávu do chatu (možná bude nutné upravit časování)
    wait(0.1)
    sendMessage()
end

-- Připojí se k eventu, který se aktivuje, když hráč získá kill
local function setupKillDetection()
    LocalPlayer.CharacterAdded:Connect(function(character)
        -- Předpokládáme, že existuje event pro přidání bodu nebo killu
        character:WaitForChild("Humanoid").Died:Connect(function()
            -- Check if the local player got the kill
            local killer = character:FindFirstChild("creator")
            if killer and killer.Value == LocalPlayer then
                onPlayerKill()
            end
        end)
    end)
end

-- Inicializace sledování
setupKillDetection()
